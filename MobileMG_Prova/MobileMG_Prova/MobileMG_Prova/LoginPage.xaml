<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileMG_Prova.LoginPage" BackgroundColor="White">

    <Grid>

        <StackLayout Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="260">
            <Label Text="Acessar" FontSize="18" TextColor="Black" HorizontalOptions="CenterAndExpand" Margin="0, 0, 0, 20"/>

            <Frame BorderColor="Red" x:Name="erroBorderEntry">
                <Entry Placeholder="Usuário" x:Name="usuarioInput" Focused="usuarioInput_Focused" />
            </Frame>
            <Entry Placeholder="Senha" x:Name="senhaInput" IsPassword="True" Focused="senhaInput_Focused"/>

            <Button Text="Login" x:Name="btnLogin" BorderColor="Black" BorderWidth="1" BackgroundColor="White" WidthRequest="140" HeightRequest="40" HorizontalOptions="Center" Clicked="btnLogin_Clicked"/>
        </StackLayout>
        
        <Label x:Name="toastInvalid" Text="Usuário/Senha inválidos" BackgroundColor="#505050" TextColor="White" FontSize="18" HorizontalOptions="FillAndExpand" VerticalOptions="End" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HeightRequest="60" Margin="8,0,8,8"/>
    </Grid>

</ContentPage>